    <div class="container">

        <div class="jumbotron">
            <h1>Cadastro de Clientes</h1>
            <p>
                Esta é uma listagem de todos os clientes cadastrados
                <a href="/cliente/index" class="btn btn-info pull-right"> <span class="glyphicon glyphicon-chevron-left"></span> Voltar</a>
            </p>            
        </div>

        <form action="/cliente/create" method="post">
            <div class="form-group">
                <label>Nome</label>
                <input type="text" class="form-control" name="nome"/>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email" />
            </div>

            <div class="form-group">
                <label>Endereco</label>
                <textarea class="form-control" name="endereco" type="text"></textarea>
            </div>

            <div class="form-group">
                <label>Genero</label>
                <select class="form-control" name="genero">
                    <option value="0">Masculino</option>
                    <option value="1">Feminino</option>
                </select>
            </div>

            <div class="form-group">
                <label>Nacimento</label>
                <input class="form-control" name="nascimento" type="date" />
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input class="form-control" name="senha" type="password" />
            </div>

            <div class="form-group hidden">
                <label>Deleted</label>
                <input class="form-control" name="deleted" type="hidden" value="0" />
            </div>

            <div class="form-group">
                <button class="btn btn-success" type="submit">Salvar</button>
                <a href="/cliente/index">Voltar</a>
            </div>

        </form> 


        
